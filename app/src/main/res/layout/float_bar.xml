<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="horizontal"
	android:gravity="center">

	<ImageButton
		style="?android:attr/buttonBarButtonStyle"
		android:layout_height="48dp"
		android:layout_width="48dp"
		android:src="@drawable/ic_menu"
		android:scaleType="centerInside"
		android:id="@+id/floatbarImageButton1"/>

	<TextView
		android:id="@+id/floatbarTextView"
		android:textColor="#ffffff"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:text="Full"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="right">

		<ImageButton
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="48dp"
			android:layout_width="48dp"
			android:src="@drawable/ic_refresh"
			android:scaleX="1.0"
			android:scaleType="centerInside"
			android:id="@+id/floatbarImageButton2"/>

		<ImageButton
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="48dp"
			android:layout_width="48dp"
			android:src="@drawable/ic_sort_variant"
			android:scaleType="centerInside"
			android:id="@+id/floatbarImageButton3"/>

		<ImageButton
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="48dp"
			android:layout_width="48dp"
			android:src="@drawable/ic_pause"
			android:scaleType="centerInside"
			android:id="@+id/floatbarImageButton4"/>

	</LinearLayout>

</LinearLayout>

